
<div class="row mid make">
  <div class="col-md-8 mid">
    <div class="row">
      <h1 class="mid heading">Hotdogs!</h1>
    </div>
    <br>
    <div class="row mid img">
      <img src="../assets/img/hotDog.jpg" alt="HotDog IMG" class="mid img round">
    </div>
  </div>
</div>

<div class="row mid make">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8 mid">
        <div class="row">


      <div class="col-md-6 ketchup round">
        <br>
        <h4>Hotdogs that are not devoured:</h4>
        <ol class="pl-0">
          {{#each hotdogs}}
            {{#if devoured}}
              {{> hotdogs/hotdog-block devoured=false}}
            {{/if}}
          {{/each}}
        </ol>
      </div>

      <div class="col-md-6 mustard round">
        <br>
        <h4>Hotdogs that are devoured:</h4>
        <ol class="pl-0">
          {{#each hotdogs}}
            {{#unless devoured}}
              {{> hotdogs/hotdog-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ol>
      </div>


        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mid make">
  <div class="col-md-10 mid">
      <div class="row mid">
        <div class="col-md-6 mid">
          <h4 class="mid">Add a Hotdog</h4>
          <form class="create-form">
            <div class="form-group">
              <label for="hotdog">Hotdog Name:</label>
              <input type="text" class="form-control" id="hotdog" name="name">
            </div>
            <div class="form-group">
              <label for="devoured">Devoured?</label><br>
              <input type="radio" name="devoured" value="0"> Yes<br>
              <input type="radio" name="devoured" value="1" checked> No
            </div>
            <button class="btn btn-success" type="submit">Add hotdog</button>
          </form>

        </div>
      </div>

    <br>
  </div>
</div>
<br>
